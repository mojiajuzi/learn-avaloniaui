<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             xmlns:vm="clr-namespace:MyMoney.ViewModels"
             x:Class="MyMoney.Views.CategoryView"
             x:DataType="vm:CategoryViewModel"
             xmlns:local="clr-namespace:MyMoney.Services"
             Background="{DynamicResource BackgroundBrush}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="8*" />
            <RowDefinition Height="84*" />
            <RowDefinition Height="8*" />
        </Grid.RowDefinitions>

        <!-- 顶部工具栏 -->
        <Border Classes="Card" Margin="16,8">
            <DockPanel>
                <Button DockPanel.Dock="Left"
                        Click="CreateCategoryClick">
                    <StackPanel Orientation="Horizontal"
                                Spacing="4">
                        <TextBlock Text="+"
                                   FontWeight="Bold"
                                   VerticalAlignment="Center" />
                        <TextBlock Text="Add" />
                    </StackPanel>
                </Button>
            </DockPanel>
        </Border>

        <!-- 创建分类弹窗 -->
        <Popup Name="CreateCategoryPopup"
               IsOpen="False"
               Placement="Center"
               PlacementTarget="{Binding $parent[UserControl]}"
               HorizontalAlignment="Center"
               VerticalAlignment="Top">
            <Border Classes="Card"
                    Width="400"
                    Background="{DynamicResource CardBackgroundBrush}">
                <StackPanel Spacing="20" Margin="16">
                    <TextBlock Text="Create New Category"
                               HorizontalAlignment="Center" />

                    <TextBox Name="Name"
                             Watermark="Category Name" />

                    <ToggleSwitch Name="Status"
                                  OnContent="Active"
                                  OffContent="Inactive" />

                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Center"
                                Spacing="16">
                        <Button
                            Classes="Cancel"
                            Content="Cancel"
                            Click="CreateCategoryCancleClick" />
                        <Button Content="Create"
                                Click="CreateCategorySubmitClick" />
                    </StackPanel>
                </StackPanel>
            </Border>
        </Popup>

        <!-- 数据表格 -->
        <Border Grid.Row="1" Classes="Card" Margin="16,8">
            <DataGrid x:Name="Root"
                      ItemsSource="{Binding Categories}"
                      IsReadOnly="True"
                      GridLinesVisibility="All"
                      BorderThickness="1">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Id"
                                        Width="*"
                                        Binding="{Binding Id}" />
                    <DataGridTextColumn Header="Name"
                                        Width="*"
                                        Binding="{Binding Name}" />
                    <DataGridTemplateColumn Header="Status" Width="*">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <ToggleSwitch Margin="8,0"
                                              IsChecked="{Binding Status, Converter={local:EnumToBoolConverter}, ConverterParameter=Active}"
                                              Command="{Binding #Root.((vm:CategoryViewModel)DataContext).ToggleSwitchChangedCommand}"
                                              CommandParameter="{Binding .}" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTextColumn Header="Created At"
                                        Width="*"
                                        Binding="{Binding CreatedAt}" />
                    <DataGridTextColumn Header="Updated At"
                                        Width="*"
                                        Binding="{Binding UpdatedAt}" />
                    <DataGridTemplateColumn Header="Action" Width="*">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Button Classes="Delete"
                                        Content="Delete"
                                        Command="{Binding #Root.((vm:CategoryViewModel)DataContext).DeleteCategoryCommand}"
                                        CommandParameter="{Binding .}" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Border>

        <!-- 分页控件 -->
        <Border Grid.Row="2" Classes="Card" Margin="16,8">
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        Spacing="16">
                <Button Classes="IconButton"
                        Command="{Binding GoToPreviousPageCommand}">
                    <PathIcon Data="{StaticResource ChevronLeft}" />
                </Button>

                <StackPanel Orientation="Horizontal"
                            VerticalAlignment="Center"
                            Spacing="8">
                    <TextBlock Text="{Binding CurrentPage}"
                               Classes="h2" />
                    <TextBlock Text="/"
                               Foreground="{DynamicResource ForegroundSecondaryBrush}" />
                    <TextBlock Text="{Binding TotalPages}"
                               Classes="h2" />
                </StackPanel>

                <Button Classes="IconButton"
                        Command="{Binding GoToNextPageCommand}">
                    <PathIcon Data="{StaticResource ChevronRight}" />
                </Button>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>